P addresses for your subdomains
declare -A subdomains
subdomains["web-01"]="52.90.22.175"
subdomains["web-02"]="107.22.142.79"
subdomains["lb-01"]="100.26.233.183"
subdomains["www"]="100.26.233.183"

# Check if the correct number of arguments is provided
if [ $# -lt 4 ]; then
  echo "Usage: $0 SUBDOMAIN PATH_TO_FILE USERNAME PATH_TO_SSH_KEY"
  exit 1
fi

# Get the subdomain from the command-line argument
subdomain=$1

# Check if the subdomain exists in the array
if [ -z "${subdomains[$subdomain]}" ]; then
  echo "Invalid subdomain. Available subdomains: web-01, web-02, lb-01, www"
  exit 1
fi

# Assign other arguments to variables
path_to_file=$2
username=$3
path_to_ssh_key=$4
ip=${subdomains[$subdomain]}

# Disable Strict Host Key checking
scp -o "StrictHostKeyChecking no" -i "$path_to_ssh_key" "$path_to_file" "$username@$ip:~/"

# Check if the transfer was successful
if [ $? -eq 0 ]; then
  echo "FILE TRANSFER WAS SUCCESSFUL"
else
  echo "FILE TRANSFER FAILED"
fi

